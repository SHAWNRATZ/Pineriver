@page
@model PineriverASPNETPage.Pages.Identity.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="bg-info text-white">All Users</h1>
<a asp-page="Register" class="btn btn-secondary my-4">Create a User</a>

<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Name</th><th>Email</th><th>Update</th><th>Delete</th></tr>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td><a class="btn btn-sm btn-primary" asp-page="Update" asp-route-id="@user.Id">Update</a></td>
            <td>
                <form asp-page="Delete" asp-page-handler="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
